<form
  class="card p-3 bg-light text-center mt-3 mb-3"
  href="/category/edit/{{category._id}}"
  method="post"
>
  <h2 class="text-bg-success">Edit category</h2>
  <div class="form-group">
    <label class="h3 text-secondary">Name</label>
    <input type="text" name="name" class="form-control" value="{{category.name}}" required /></div>

  <div class="form-group">
    <label class="h3 text-secondary">Company</label>
    <input type="text" name="company" class="form-control" value="{{category.company}}" required /></div>
  <div class="form-group">
    <label class="h3 text-secondary">Image</label>
    <input type="text" name="image" class="form-control" value="{{category.image}}" required /></div>
<div class="form-group">
    <label class="h3 text-secondary">Description</label>
    <input type="text" name="description" class="form-control" value="{{category.description}}" required /></div>
  <div class="form-group">
    <input type="submit" class="btn btn-primary mt-3" value="Edit" /></div>
</form>