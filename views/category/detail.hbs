      <table class="table table-bordered text-center mt-4">
         <tr>
            <th colspan="2" class="text text-bg-success">Category INFO</th>
         </tr>
         <tr>
            <th>Name</th>
            <th>{{category.name}}</th>
         </tr>
         <tr>
            <th>Brand</th>
            <th>{{category.company}}</th>
         </tr>
         <tr>
            <th>Price</th>
            <th>{{category.description}}$</th>
         </tr>
      </table>
   </div>
</div>