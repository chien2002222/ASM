<table class="table table-bordered text-center">
  <tr>
    <th class="h1" colspan="3">Category List</th>
    <th>
      <a class="btn btn-success" href="/category/add">Add</a>
    </th>
  </tr>
  <tr>
    <th>Category Name</th>
    <th>Company</th>
    <th>Category Image</th>
    <th>Menu</th>
  </tr>
  {{#each categories}}
    <tr>
      <td>{{name}}</td>
      <td>{{company}}</td>
      <td>
        <a href="/category/detail/{{_id}}">
          <img src="{{image}}" width="100" height="100" />
        </a>
      </td>
      <td>
        <a class="btn btn-warning" href="/category/edit/{{_id}}">Edit</a>
        <a class="btn btn-danger" href="/category/delete/{{_id}}" onclick="return confirm('Are you sure to delete this mobile');">Delete</a>
      </td>
    </tr>
  {{/each}}
</table>